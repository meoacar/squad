# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=squadbul
DATABASE_PASSWORD=your_secure_password_here
DATABASE_NAME=squadbul
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# Redis Cache Configuration
# TTL values are in seconds
CACHE_TTL_DASHBOARD=300
CACHE_TTL_ANALYTICS=600
CACHE_TTL_LISTS=120

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_min_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
API_PREFIX=api/v1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Email Configuration (Resend recommended)
EMAIL_SERVICE=resend
EMAIL_API_KEY=your_resend_api_key_here
EMAIL_FROM=noreply@squadbul.com
EMAIL_FROM_NAME=Squadbul

# Storage Configuration (Cloudflare R2 or AWS S3)
STORAGE_PROVIDER=r2
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=squadbul-uploads
R2_PUBLIC_URL=https://your-bucket.r2.dev

# Sentry Configuration (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SENTRY_DSN=your_frontend_sentry_dsn
NEXT_PUBLIC_APP_VERSION=1.0.0

# Security
BCRYPT_ROUNDS=10
PASSWORD_MIN_LENGTH=8

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=50

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Session
SESSION_SECRET=your_session_secret_here

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PREMIUM=false
ENABLE_PAYMENTS=false

# Admin
ADMIN_EMAIL=admin@squadbul.com
# Note: Admin users are created via SQL, not environment variables
# See README.md for admin setup instructions

# Monitoring
ENABLE_SWAGGER=true
ENABLE_METRICS=true
