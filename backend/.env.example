# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=squadbul
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/squadbul

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200

# JWT Configuration
JWT_SECRET=your_jwt_secret_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3003
API_PREFIX=api/v1

# CORS Configuration
CORS_ORIGIN=http://localhost:3003

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Security
BCRYPT_ROUNDS=10

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=50

# Payment Providers - Ä°yzico
# Sandbox: https://sandbox-api.iyzipay.com
# Production: https://api.iyzipay.com
IYZICO_API_KEY=your_iyzico_api_key
IYZICO_SECRET_KEY=your_iyzico_secret_key
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# Payment Providers - PayTR
# Test Mode: Otomatik olarak NODE_ENV=development ise aktif
PAYTR_MERCHANT_ID=your_paytr_merchant_id
PAYTR_MERCHANT_KEY=your_paytr_merchant_key
PAYTR_MERCHANT_SALT=your_paytr_merchant_salt
PAYTR_BASE_URL=https://www.paytr.com
